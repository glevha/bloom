<div class="login-signup">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, input_html: { class: 'big' }, placeholder: "user@domain.com", required: false, autofocus: true %>
      <%= f.input :password, input_html: { class: 'big' }, required: false %>
      <%= f.input :remember_me, input_html: { class: 'big' }, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%- if devise_mapping.omniauthable? %>
        <div class="image-list signin-icons">
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to ("<span class='fa fa-facebook'></span> Sign in with #{provider.to_s.titleize}").html_safe, omniauth_authorize_path(resource_name, provider), id:"facebook-signin", class: "button big upper"%>
          <% end -%>
        </div>
      <% end -%>
      <%= f.button :submit, "Login", class: "button secondary upper big" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
